<h1>{{t 'product.administration.units.title'}}</h1>
<form class="form-inline pull-right" role="form" {{action "addUnit" name acronym on="submit"}}> <!-- horizontal form -->
    <div class="form-group">
      <label for="nameInput">{{t 'product.basic.commonWords.name'}}</label>
      {{input value=name class="form-control" id="nameInput" }}
    </div>
    <div class="form-group">
      <label for="acronymInput">{{t 'product.basic.commonWords.acronym'}}</label>
      {{input value=acronym class="form-control" id="acronymInput" }}
    </div>
    <button type="submit" class="btn btn-default">{{t 'product.basic.buttonText.add'}}</button>
</form>
<table class="table table-striped">
  <thead>
    <tr>
      <th>{{t 'product.basic.commonWords.name'}}</th>
      <th>{{t 'product.basic.commonWords.acronym'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.units as |unit|}}
    <tr>
      <td>{{unit.name}}</td>
      <td>{{unit.acronym}}</td>
      <td><button type="submit" class="btn btn-default" {{action "removeUnit" unit}}>{{t 'product.basic.buttonText.delete'}}</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
