<h1>Unidades</h1>
<form class="form-inline pull-right" role="form" {{action "addUnit" name acronym on="submit"}}> <!-- horizontal form -->
    <div class="form-group">
      <label for="nameInput">Nome</label>
      {{input value=name class="form-control" id="nameInput" }}
    </div>
    <div class="form-group">
      <label for="acronymInput">Sigla</label>
      {{input value=acronym class="form-control" id="acronymInput" }}
    </div>
    <button type="submit" class="btn btn-default">Adicionar</button>
</form>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.units as |unit|}}
    <tr>
      <td>{{unit.name}}</td>
      <td>{{unit.acronym}}</td>
      <td><button type="submit" class="btn btn-default" {{action "removeUnit" unit}}>remover</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
