<div class="col-md-10">
  <form class="form-inline pull-right" role="form" {{action "add" model.newItem on="submit"}}> <!-- horizontal form -->
    <div class="form-group">
      <label for="descriptionInput">{{t 'product.basic.commonWords.description'}}</label>
      {{mab-input value=model.newItem.description class="form-control" id="descriptionInput" }}
    </div>
    <div class="form-group">
      <label for="totalInput">{{t 'product.basic.commonWords.total'}}</label>
      {{mab-input value=model.newItem.total class="form-control" id="totalInput" numeric="true" }}
    </div>
    <button type="submit" class="btn btn-default">{{t 'product.basic.buttonText.add'}}</button>
  </form>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>{{t 'product.basic.commonWords.description'}}</th>
        <th>{{t 'product.basic.commonWords.total'}}</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td>{{t 'product.basic.commonWords.total'}}</td>
        <td>{{format-number model.projectStage.totalExpense style='currency' currency='BRL' fallback='nothing'}}</td>
      </tr>
    </tfoot>
    <tbody>
      {{#each model.projectStage.expenseItems as |item|}}
      <tr>
        <td>{{item.description}}</td>
        <td>{{format-number item.total style='currency' currency='BRL' fallback='nothing'}}</td>
        <td>
          <button class="btn btn-default" {{action "remove" item}}>{{t 'product.basic.buttonText.delete'}}</button>
          {{#link-to "projects.project.execution.stage.expenses.expense.edit" item.id}}<button class="btn btn-default">{{t 'product.basic.buttonText.edit'}}</button>{{/link-to}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
