{{#link-to "company.projects.project.transactions.new"}}<button class="btn btn-default">{{t 'product.basic.commonWords.newTransaction'}}</button>{{/link-to}}
<table class="table table-striped">
  <thead>
    <tr>
      <th>{{t 'product.basic.commonWords.description'}}</th>
      <th>{{t 'product.basic.commonWords.numberOfItems'}}</th>
      <th>{{t 'product.basic.commonWords.total'}}</th>
    </tr>
  </thead>
  <tbody>
    <!-- {{#each model.purchaseTransactions as |purchaseTransaction|}}
    {{/each}} -->
      {{#each model.project.uniquePurchaseTransaction as |transaction|}}
      <tr>
        <td>{{transaction.description}}</td>
        <td>{{transaction.numberOfItems}}</td>
        <td>{{format-number transaction.totalExpense style='currency' currency='BRL' fallback='nothing'}}</td>
        <td>
          {{#link-to "company.projects.project.transactions.transaction.edit" transaction.id}}
            <button class="btn btn-default">{{t 'product.basic.buttonText.edit'}}</button>
          {{/link-to}}
        </td>
      </tr>
      {{/each}}
  </tbody>
</table>
