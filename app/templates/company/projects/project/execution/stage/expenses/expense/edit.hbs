<form  class="form-horizotal" role="form" {{action "save" model on="submit"}}> <!-- horizontal form -->
  {{mab-input-label field = model.description displayText=(t 'product.basic.commonWords.description') size="8"}}
  {{mab-input-label field = model.total displayText=(t 'product.basic.commonWords.total') size="4"}}
  <br/>
  <div class="form-group">
    <div class="pull-right" style="margin-top: 20px;">
      {{#link-to "company.projects.project.execution.stage.expenses" model.stage.id}}<button class="btn btn-default">{{t 'product.basic.buttonText.cancel'}}</button>{{/link-to}}
      <button type="submit" class="btn btn-default">{{t 'product.basic.buttonText.save'}}</button>
    </div>
  </div>
</form>
