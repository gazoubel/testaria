<form class="form-inline pull-right" role="form" {{action "addField" name on="submit"}}> <!-- horizontal form -->
    <div class="form-group {{if modelIsInValid "has-error"}}">
      <label for="nameInput">{{t 'product.basic.commonWords.name'}}</label>
      {{input value=name class="form-control" id="nameInput" }}
    </div>
    <button type="submit" class="btn btn-default">{{t 'product.basic.buttonText.add'}}</button>
</form>
<table class="table table-striped">
  <thead>
    <tr>
      <th>{{t 'product.basic.commonWords.name'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.paymentTypeFields as |fieldName|}}
    <tr>
      <td>{{fieldName.name}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
<div class="form-group">
  <div class="pull-right" style="margin-top: 20px;">
    <button class="btn btn-default" {{action "cancel" model}}>{{t 'product.basic.buttonText.cancel'}}</button>
    <button  {{action "save" model}} class="btn btn-default">{{t 'product.basic.buttonText.save'}}</button>
  </div>
</div>
