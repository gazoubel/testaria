        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Orce</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="#">{{t 'product.menu.basic'}}</a></li>
        <li><a href="#">{{t 'product.menu.composition'}}</a></li>
        {{#link-to 'company.projects' tagName="li" href=false}}
            <a href="#">{{t 'product.menu.projects'}}</a>
        {{/link-to}}
        {{#link-to 'company.administration' tagName="li" href=false}}
            <a href="#">{{t 'product.menu.administration'}}</a>
        {{/link-to}}
        {{!-- <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administracao<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Usuarios</a></li>
            <li><a href="#">Unidades</a></li>
          </ul>
        </li> --}}
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="{{t 'product.menu.search'}}">
        </div>
        <button type="submit" class="btn btn-default">OK</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        {{!-- <li><a href="#">Link</a></li> --}}
        {{!-- <p class="navbar-text">{{t 'product.menu.loggedInText' name=(session.currentUser.name) role=(session.currentUser.role)}}</p> --}}
        <p class="navbar-text">{{t 'product.menu.loggedInText'}} {{session.membership.user.name}} ({{session.membership.role}})</p>
        <li><a href="#"  {{action "signOut"}}>{{t 'product.menu.signOut'}}</a></li>
        {{!-- <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
