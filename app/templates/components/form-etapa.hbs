<form  class="form-horizotal" role="form" {{action "save" projectStage project on="submit"}}> <!-- horizontal form -->
  <!-- <div class="row"> -->
    {{#az-dropdown-label
      validation=projectStage.validations.attrs.stage
      options=stages
      selected=projectStage.stage
      displayText=(t 'product.basic.commonWords.stage')
      size="4" as |item|}}
      {{item.name}}
    {{/az-dropdown-label}}
  <!-- </div>
  <div class="row"> -->
    {{mab-input-label field = projectStage.displayName displayText=(t 'product.basic.commonWords.name') size="12"}}
  <!-- </div>
  <div class="row"> -->
    {{mab-input-label field = projectStage.total displayText=(t 'product.basic.commonWords.total')
      size="4" hasError=projectStage.validations.attrs.total.isInvalid}}
    {{mab-input-date-label field = projectStage.startdate displayText=(t 'product.basic.commonWords.initialDate')
      size="4" hasError=projectStage.validations.attrs.startdate.isInvalid}}
    {{mab-input-date-label field = projectStage.enddate displayText=(t 'product.basic.commonWords.endDate')
      size="4" hasError=projectStage.validations.attrs.enddate.isInvalid}}
  <!-- </div> -->
  <br/>
  <div class="form-group">
    <div class="pull-right" style="margin-top: 20px;">
      {{#link-to "company.projects.project.stages"}}<button class="btn btn-default">{{t 'product.basic.buttonText.cancel'}}</button>{{/link-to}}
      <button type="submit" class="btn btn-default">{{t 'product.basic.buttonText.save'}}</button>
    </div>
  </div>
</form>
