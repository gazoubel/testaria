<form  class="form-horizotal" role="form" {{action "save" projectStage project on="submit"}}> <!-- horizontal form -->
  <div class="col-sm-4">
    <label>{{t 'product.basic.commonWords.stage'}}</label>
    {{#power-select options=project.company.stages
      selected=projectStage.stage
      onchange=(action (mut projectStage.stage))
      placeholder=(t 'product.basic.commonWords.select')
      as |stage|}}
       {{stage.name}}
     {{/power-select}}
  </div>
  {{mab-input-label field = projectStage.name displayText=(t 'product.basic.commonWords.name') size="12"}}
  {{mab-input-date-label field = projectStage.startdate displayText=(t 'product.basic.commonWords.initialDate') size="4"}}
  {{mab-input-date-label field = projectStage.enddate displayText=(t 'product.basic.commonWords.endDate') size="4"}}
  {{mab-input-label field = projectStage.total displayText=(t 'product.basic.commonWords.total') size="4"}}
    <br/>
  <div class="form-group">
    <div class="pull-right" style="margin-top: 20px;">
      {{#link-to "projects.project.etapas"}}<button class="btn btn-default">{{t 'product.basic.buttonText.cancel'}}</button>{{/link-to}}
      <button type="submit" class="btn btn-default">{{t 'product.basic.buttonText.save'}}</button>
    </div>
  </div>
</form>
