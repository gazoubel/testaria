<div class="form-group {{if validation.isInvalid "has-error"}}">
  <label>{{displayText}}</label>
  {{#if validation.isInvalid}}
    <label class="control-label">({{validation.message}})</label>
  {{/if}}
  {{#mab-dropdown
    options=options
    selected=selected
    searchField = searchField
    renderInPlace=true
    onchange=(action (mut selected))
    as |item|}}
     {{yield item}}
   {{/mab-dropdown}}
</div>
