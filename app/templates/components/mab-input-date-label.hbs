{{#if first}}
  <div class="ax-clear"></div>
  <div class="ax-v-space-10"></div>
{{/if}}

{{#if isInlineText }}

  <label class="col-sm-{{inlineLabelSize}} control-label">{{displayText}}</label>

  <div class="col-sm-{{size}} {{cssClassFirst}} {{cssClassLast}}">
    <div class="input-group date" id="datePicker">

      {{mab-input-date id          = idInputElement
                       showOnFocus = false
                       autoclose   = true
                       value       = field
                       class       = "form-control mousetrap"
                       disabled    = isDisabled
                       autofocus   = autofocus
                       action      = "keyDown" on="key-down"
                       action      = "keyUp"   on="key-up"}}

      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>

    </div>
  </div>

{{else}}

  <div class="col-sm-{{size}} {{cssClassFirst}} {{cssClassLast}}">

    <label>{{displayText}}</label>

    <div class="input-group date" id="datePicker">

      {{mab-input-date id          = idInputElement
                       showOnFocus = false
                       autoclose   = true
                       value       = field
                       class       = "form-control mousetrap"
                       disabled    = isDisabled
                       autofocus   = autofocus
                       action      = "keyDown" on="key-down"
                       action      = "keyUp"   on="key-up"}}

      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>

    </div>
  </div>

{{/if}}
